        <class>com.ga4w20.bookazon.entities.Publisher</class>
        <class>com.ga4w20.bookazon.entities.Ads</class>
        <class>com.ga4w20.bookazon.entities.Tax</class>
        <class>com.ga4w20.bookazon.entities.Bookauthor</class>
        <class>com.ga4w20.bookazon.entities.Sale</class>
        <class>com.ga4w20.bookazon.entities.Answer</class>
